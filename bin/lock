#!/bin/bash
# inspired by https://github.com/pavanjadhaw/betterlockscreen

lock() {
  #$1 image path
  letterEnteredColor=d23c3dff
  letterRemovedColor=d23c3dff
  passwordCorrect=00000000
  passwordIncorrect=d23c3dff
  background=00000000
  foreground=ffffffff
  i3lock \
    -t -i "$1" \
    --timepos="110:h-70" \
    --datepos="135:h-45" \
    --clock --datestr "Type password to unlock..." \
    --insidecolor=$background --ringcolor=$foreground --line-uses-inside \
    --keyhlcolor=$letterEnteredColor --bshlcolor=$letterRemovedColor --separatorcolor=$background \
    --insidevercolor=$passwordCorrect --insidewrongcolor=$passwordIncorrect \
    --ringvercolor=$foreground --ringwrongcolor=$foreground --indpos="x+280:h-70" \
    --radius=20 --ring-width=4 --veriftext="" --wrongtext="" \
    --verifcolor="$foreground" --timecolor="$foreground" --datecolor="$foreground" \
    --noinputtext="" --force-clock -n
}

scrot "/tmp/lock.png"

rectangles=" "
SR=$(xrandr --query | grep ' connected' | grep -o '[0-9][0-9]*x[0-9][0-9]*[^ ]*')
for RES in $SR; do
  SRA=(${RES//[x+]/ })
  CX=$((${SRA[2]} + 25))
  CY=$((${SRA[1]} - 30))
  rectangles+="rectangle $CX,$CY $((CX+300)),$((CY-80)) "
done
convert "/tmp/lock.png" -scale 20% -scale 1000% -resize "1920x1080""^" -gravity center "1920x1080" -draw "fill rgba(0, 0, 0, 0.4) $rectangles" "/tmp/lock.png"

pkill -u "$USER" -USR1 dunst
lock "/tmp/lock.png"
pkill -u "$USER" -USR2 dunst

rm "/tmp/lock.png"
