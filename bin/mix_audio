#!/bin/bash

microphone="alsa_input.pci-0000_00_1f.3.analog-stereo"
headphones="alsa_output.usb-FiiO_DigiHug_USB_Audio-01.analog-stereo"

echo "Setting up echo cancellation"
pactl load-module module-echo-cancel use_master_format=1 aec_method=webrtc \
      aec_args="analog_gain_control=0\\ digital_gain_control=1\\ experimental_agc=1\\ noise_suppression=1\\ voice_detection=1\\ extended_filter=1" \
      source_master="$microphone" source_name=mic_ec source_properties=device.description=mic_ec \
        sink_master="$headphones" sink_name=spk_ec   sink_properties=device.description=spk_ec

echo "Creating virtual output devices"
pactl load-module module-null-sink sink_name=vsink_app     sink_properties=device.description=vsink_app
pactl load-module module-null-sink sink_name=vsink_app_mic sink_properties=device.description=vsink_app_mic

echo "Creating loopbacks"
pactl load-module module-loopback latency_msec=30 adjust_time=3 source=mic_ec            sink=vsink_app_mic
pactl load-module module-loopback latency_msec=30 adjust_time=3 source=vsink_app.monitor sink=vsink_app_mic
pactl load-module module-loopback latency_msec=30 adjust_time=3 source=vsink_app.monitor sink=spk_ec

echo "Setting default devices"
pactl set-default-source vsink_app_mic.monitor
pactl set-default-sink   spk_ec
