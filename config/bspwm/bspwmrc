#! /bin/sh

bspc config border_width         2
bspc config window_gap           5
bspc config top_padding          0

bspc config borderless_monocle   false
bspc config gapless_monocle      true
bspc config click_to_focus       any

# MONITORS
xrandr --output DP-0 --auto --pos 0x1440 --primary
xrandr --output HDMI-0 --auto --pos 440x0 --rotate inverted
xrandr --output DVI-I-1 --auto --pos 3440x1200 --rotate right

# DESKTOPS
bspc monitor DP-0 -d 1 2 3
bspc monitor HDMI-0 -d 4 5 6
bspc monitor DVI-I-1 -d 7 8 9 10

feh --bg-center ~/.config/wallpaper

# COLOURS
bspc config normal_border_color   "#757575"
bspc config active_border_color   "#757575"
bspc config focused_border_color  "#6441A4"
bspc config presel_feedback_color "#757575"

# RULES
for rule in $(bspc rule -l); do
  bspc rule -r head
done
bspc rule -a GLava             state=floating
bspc rule -a jetbrains-toolbox state=floating
bspc rule -a Alacritty         state=floating
bspc rule -a Nautilus          state=floating

bash $HOME/.config/polybar/launch.sh

xrdb ~/.Xresources
setxkbmap -layout gb
setxkbmap -option caps:escape
xsetroot -cursor_name left_ptr
systemctl --user import-environment DISPLAY

sxhkd &
nm-applet &
sleep 0.2
clipit &

xset s 600 600
numlockx on

wmname "LG3D"
