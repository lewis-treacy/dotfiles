[colors]
background      = ${xrdb:*.background}
background-alt  = ${xrdb:*.color0}
foreground      = ${xrdb:*.foreground}
foreground-alt  = ${xrdb:*.color7}
foreground-dark = ${xrdb:*.color8}
primary         = ${xrdb:*.color13}
secondary       = ${xrdb:*.color4}
alert           = ${xrdb:*.color1}
green           = ${xrdb:*.color2}


[bar/main]
width = 100%
height = 20
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2

border-size = 0
border-color = #00000000

; spaces at the end and begining of bar
padding-left = 0
padding-right = 1

; spacing between modules
module-margin-left = 0
module-margin-right = 0

locale = en_GB.UTF-8
font-0 = "Source Code Pro:style=Bold:pixelsize=10;2"
font-1 = "FontAwesome:pixelsize=10;3"

tray-position = right
tray-padding = 2
wm-restack = bspwm


[module/sep]
type = custom/text
content = "|"
content-background = ${colors.background}
content-foreground = ${colors.foreground-dark}
content-padding = 1


[module/bspwm]
type = internal/bspwm

enable-click = false
enable-scroll = false

label-focused = %name%
label-focused-foreground = ${colors.primary}
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-underline = ${colors.alert}
label-urgent-padding = 1

label-empty = " "
label-empty-padding = 1


[module/date]
type = internal/date
interval = 0.2

date = %Y-%m-%d
time = T%H:%M:%S%z
date-alt = %a %d %b
time-alt = " %H:%M:%S"
label = %date%%time%


[module/power]
type = custom/text
content = 

content-foreground = ${colors.alert}

click-left = shutdown now
click-right = reboot


[module/cpu]
type = internal/cpu
interval = 0.5
format-prefix = " "
label = %percentage-sum%%


[module/mem]
type = internal/memory
interval = 1
format-prefix = " "
label = %percentage_used%%


[module/temp]
type = internal/temperature
; temp-zone needs to be defined in the bar
thermal-zone = ${root.temp-zone}
warn-temperature = 60
interval = 0.5

format = <label>
format-warn = <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}


[module/net]
type = internal/network
; net-interface needs to be defined in the bar
interface = ${root.net-interface}
interval = 1

format-connected-background = ${colors.background}
format-connected-foreground = ${colors.foreground}
label-connected =  %downspeed% /  %upspeed%
label-connected-foreground = ${colors.foreground}
format-connected = <label-connected>

format-disconnected-background = ${colors.background}
format-disconnected-foreground = ${colors.background}
label-disconnected = not connected
label-disconnected-foreground = ${colors.alert}
format-disconnected = <label-disconnected>


[global/wm]
margin-top = 0
margin-bottom = 0


; main monitor bar
[bar/primary]
inherit = bar/main
monitor = ${env:MONITOR:DP-0}
modules-left = bspwm
modules-right = net sep mem sep cpu sep temp sep power
tray-position = none
net-interface = enp0s31f6
temp-zone = 2


; top monitor bar
[bar/top]
inherit = bar/main
monitor = ${env:MONITOR:HDMI-0}
modules-left = bspwm
tray-position = right


; right monitor bar
[bar/right]
inherit = bar/main
monitor = ${env:MONITOR:DVI-I-1}
modules-left = bspwm
modules-right = date
tray-position = none
