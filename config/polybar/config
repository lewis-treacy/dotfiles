[colors]
background      = ${xrdb:*.background}
background-alt  = ${xrdb:*.color0}
foreground      = ${xrdb:*.foreground}
foreground-alt  = ${xrdb:*.color7}
foreground-dark = ${xrdb:*.color8}
primary         = ${xrdb:*.color3}
secondary       = ${xrdb:*.color4}
alert           = ${xrdb:*.color1}
green           = ${xrdb:*.color2}


[bar/main]
width = 100%
height = 20
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2

border-size = 0
border-color = #00000000

; spaces at the end and begining of bar
padding-left = 0
padding-right = 1

; spacing between modules
module-margin-left = 0
module-margin-right = 0

locale = en_GB.UTF-8
font-0 = "Source Code Pro Medium:pixelsize=10:bold;1"
font-1 = "FontAwesome:pixelsize=10;1"

tray-position = right
tray-padding = 2
wm-restack = bspwm


[module/sep]
type = custom/text
content = "|"
content-background = ${colors.background}
content-foreground = ${colors.foreground-dark}
content-padding = 1


[module/bspwm]
type = internal/bspwm

enable-click = false
enable-scroll = false

label-focused = %name%
label-focused-foreground = ${colors.primary}
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-underline = ${colors.alert}
label-urgent-padding = 1

label-empty = " "
label-empty-padding = 1


[module/date]
type = internal/date
interval = 1

date = %Y-%m-%d
time = T%H:%M:%SZ
date-alt = %a %d %b
time-alt = " %H:%M:%S"
label = %date%%time%


[module/power]
type = custom/text
content = 

content-foreground = ${colors.alert}

click-left = shutdown now
click-right = reboot


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage%%


[module/mem]
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%


[module/temp]
type = internal/temperature
; temp-path needs to be defined in the bar
hwmon-path = ${root.temp-path}
warn-temperature = 60

format = <label>
format-warn = <label-warn>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.alert}


[module/net]
type = internal/network
; net-interface needs to be defined in the bar
interface = ${root.net-interface}
interval = 1

format-connected-background = ${colors.background}
format-connected-foreground = ${colors.foreground}
label-connected =  %downspeed% /  %upspeed%
label-connected-foreground = ${colors.foreground}
format-connected = <label-connected>

format-disconnected-background = ${colors.background}
format-disconnected-foreground = ${colors.background}
label-disconnected = not connected
label-disconnected-foreground = ${colors.alert}
format-disconnected = <label-disconnected>


[module/bat]
type = internal/battery
full-at = 99

battery = BAT0
adapter = AC
poll-interval = 5

format-charging = <label-charging>
format-charging-prefix = " "
format-charging-prefix-foreground = ${colors.green}
label-charging = %percentage%%

format-discharging = <label-discharging>
format-discharging-prefix = " "
label-discharging = %percentage%%

format-full-prefix = " "
format-full-prefix-foreground = ${colors.green}


[global/wm]
margin-top = 0
margin-bottom = 0
