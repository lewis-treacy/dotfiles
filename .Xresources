!Colourscheme
!#define col_background    #2B2E37
!#define col_foreground    #ECEFF1
!#define col_cursor        #ECEFF1

!#define col_black         #212121
!#define col_grey          #757575

!#define col_red           #E53935
!#define col_bright_red    #EF5350

!#define col_green         #7CB342
!#define col_bright_green  #9CCC65

!#define col_yellow        #FFB300
!#define col_bright_yellow #FFCA28

!#define col_blue          #039BE5
!#define col_bright_blue   #29B6F6

!#define col_teal          #00897B
!#define col_bright_teal   #26A69A

!#define col_cyan          #00ACC1
!#define col_bright_cyan   #26C6DA

!#define col_light_grey    #BDBDBD
!#define col_white         #FFFFFF

*.background:         #2B2E37
*.foreground:         #ECEFF1
*.cursorColor:        #ECEFF1

! grey 900, 600
*color0:              #212121
*color8:              #757575

! red 600, 400
*color1:              #E53935
*color9:              #EF5350

! green 600, 400
*color2:              #7CB342
*color10:             #9CCC65

! amber 600, 400
*color3:              #FB8C00
*color11:             #FFA726

! blue 600, 400
*color4:              #039BE5
*color12:             #29B6F6

! teal 600, 400
*color5:              #00897B
*color13:             #26A69A

! cyan 600, 400
*color6:              #00ACC1
*color14:             #26C6DA

! grey 400, white
*color7:              #BDBDBD
*color15:             #FFFFFF

! grey 600, 900
*.highlightColor:     #757575
*.highlightTextColor: #212121

! URxvt
URxvt.font:                xft:Source Code Pro Medium:pixelsize=14, xft:FontAwesome:pixelsize=10
URxvt.boldFont:            xft:Source Code Pro Medium:pixelsize=14:bold
URxvt.italicFont:          xft:Source Code Pro Medium:pixelsize=14:italic
URxvt.boldItalicFont:      xft:Source Code Pro Medium:pixelsize=14:bold:italic
URxvt.letterSpace:         -1
URxvt.scrollBar:           false
URxvt*fading:              20
URxvt.depth:               32
URxvt.internalBorder:      0
URxvt.externalBorder:      0

URxvt.perl-ext-common:     default,matcher,clipboard,resize-font,fullscreen
URxvt.urlLauncher:         /usr/bin/firefox
URxvt.keysym.F11:          perl:fullscreen:switch
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger:  C-Up
URxvt.iso14755:            False
URxvt.clipboard.copycmd:   xsel -ib
URxvt.clipboard.pastecmd:  xsel -ob

! rofi
rofi.color-enabled:   true
! background, border, line
rofi.color-window:    #2B2E37, #FB8C00, #ECEFF1
! background1, text1, background2, text2, background_sel, text_sel
rofi.color-normal:    #2B2E37, #ECEFF1, #2B2E37, #ECEFF1, #2B2E37
rofi.color-active:    #2B2E37, #039BE5, #2B2E37, #039BE5, #2B2E37
rofi.color-urgent:    #2B2E37, #E53935, #2B2E37, #E53935, #2B2E37
rofi.separator-style: solid

! cursor theme
Xcursor.theme: Breeze_Obsidian
Xcursor.size: 8
