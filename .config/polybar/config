[colors]
background     = ${xrdb:*.background}
background-alt = ${xrdb:*.color8}
foreground     = ${xrdb:*.foreground}
foreground-alt = ${xrdb:*.color7}
primary        = ${xrdb:*.color3}
secondary      = ${xrdb:*.color4}
alert          = ${xrdb:*.color1}


[bar/main]
width = 100%
height = 20
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2

border-size = 0
border-color = #00000000

; spaces at the end and begining of bar
padding-left = 0
padding-right = 1

; spacing between modules
module-margin-left = 0
module-margin-right = 0

locale = en_GB.UTF-8
font-0 = "Source Code Pro Medium:pixelsize=10:bold;1"
font-1 = "FontAwesome:pixelsize=10;1"

tray-position = right
tray-padding = 2

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev


[module/sep]
type = custom/text
content = "|"
content-background = ${colors.background}
content-foreground = ${colors.background-alt}
content-padding = 1


[module/bspwm]
type = internal/bspwm

label-focused = 
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

label-occupied = 
; label-occupied = 
label-occupied-foreground = ${colors.foreground-alt}
label-occupied-padding = 1

label-urgent = 
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = " "
; label-empty = 
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1


[module/date]
type = internal/date
interval = 1

date = %a %d %b
time = %H:%M:%S

format-prefix = " " 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}

label = %date% %time%


[module/powermenu]
type = custom/menu

menu-0-0 = Shutdown
menu-0-0-foreground = ${colors.alert}

menu-0-0-exec = shutdown -t 0

menu-0-1 = Reboot
menu-0-1-foreground = ${colors.primary}

menu-0-1-exec = reboot

label-open = 
label-open-foreground = ${colors.alert}

label-close = Cancel
label-close-foreground = ${colors.foreground-alt}

label-separator = " : "


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}
label = %percentage%%


[module/mem]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}
label = %percentage_used%%


[module/temp]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format = <label>
format-underline = ${colors.primary}

format-warn-prefix = " "
format-warn-prefix-foreground = ${colors.foreground-alt}
format-warn = <label-warn>
format-warn-underline = ${colors.alert}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.alert}


[module/net]
type = internal/network
; net-interface needs to be defined in the bar
interface = ${root.net-interface}
interval = 1

;format-connected-prefix = " "
format-connected-background = ${colors.background}
format-connected-foreground = ${colors.foreground}
label-connected =  %downspeed% /  %upspeed%
label-connected-foreground = ${colors.foreground}
format-connected = <label-connected>
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-underline = ${colors.primary}

format-disconnected-background = ${colors.background}
format-disconnected-foreground = ${colors.background}
label-disconnected = not connected
label-disconnected-foreground = ${colors.alert}
format-disconnected = <label-disconnected>
format-disconnected-prefix-foreground = ${colors.foreground-alt}
format-disconnected-underline = ${colors.primary}


[global/wm]
margin-top = 0
margin-bottom = 0
